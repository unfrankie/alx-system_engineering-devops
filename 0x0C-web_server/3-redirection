#!/usr/bin/env bash
# Configure Nginx server to redirect /redirect_me to another page

echo "server {
    listen 80;
    server_name _;
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}" > /etc/nginx/sites-available/redirect_me
ln -s /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/redirect_me
service nginx restart || /etc/init.d/nginx restart
